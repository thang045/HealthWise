<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medical_background"
    tools:context=".AppointmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Date and Time: " />

            <Button
                android:id="@+id/btnDateTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="4pt"
                android:layout_marginHorizontal="10pt"
                android:text="Choose date and time" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:textSize="10pt"
            android:textStyle="bold"
            android:gravity="center"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5pt"
            android:layout_marginHorizontal="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Name:" />

            <EditText
                android:id="@+id/edtName_Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:hint="Daniel"
                android:textColorHint="#ACACAC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5pt"
            android:layout_marginHorizontal="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Phone:" />

            <EditText
                android:id="@+id/edtPhone_Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:hint = "Phone number"
                android:textColorHint="#ACACAC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5pt"
            android:layout_marginHorizontal="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Symptoms:" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:hint="Symptoms description"
                android:textColorHint="#ACACAC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5pt"
            android:layout_marginHorizontal="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="10pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Doctor:" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>