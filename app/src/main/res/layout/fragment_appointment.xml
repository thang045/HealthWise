<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#283896E1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Date and Time: " />

            <Button
                android:id="@+id/btnDateTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="4pt"
                android:layout_marginHorizontal="10pt"
                android:backgroundTint="@color/blue"
                android:text="Choose date and time" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:textSize="10pt"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#6DCFCECE"
            android:hint="Time"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5pt"
            android:layout_marginHorizontal="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Name:" />

            <EditText
                android:id="@+id/edtName_Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:hint="Daniel"
                android:textColorHint="#ACACAC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5pt"
            android:layout_marginHorizontal="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Phone:" />

            <EditText
                android:id="@+id/edtPhone_Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:hint = "Phone number"
                android:textColorHint="#ACACAC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5pt"
            android:layout_marginHorizontal="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Symptoms:" />

            <EditText
                android:id="@+id/edtSymptoms_Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:hint="Symptoms description"
                android:textColorHint="#ACACAC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8pt"
            android:layout_marginVertical="3pt"
            android:padding="5pt"
            android:background="@drawable/homepage_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:padding="5pt"
                android:textSize="8pt"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Doctor:" />

            <Spinner
                android:id="@+id/spnDropdown_Appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginVertical="8pt"
                android:background="@drawable/homepage_layout_1"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddAppointment"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:layout_gravity="center"
            android:text="Add appointment" />

    </LinearLayout>
</FrameLayout>